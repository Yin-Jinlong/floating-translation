{
  "name": "悬浮翻译",
  "version": "0.0.1.3",
  "manifest_version": 3,
  "description": "悬浮翻译单词，包含词性",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "server.js"
  },
  "content_scripts": [
    {
      "world": "ISOLATED",
      "js": ["content.js"],
      "css": ["main.css"],
      "matches": ["*://*/*"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ]
}
